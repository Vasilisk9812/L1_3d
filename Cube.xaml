<Window x:Class="L1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mycode="clr-namespace:L1.Cube3D" 
        mc:Ignorable="d"
        Title="Window1" Height="800" Width="800">
    <Grid>
        <Viewport3D x:Name="Cube3D">
            <Viewport3D.Camera>
                <PerspectiveCamera Position="0,0,7" LookDirection="0,0,-1" UpDirection="0,1,0"/>
            </Viewport3D.Camera>
            <Viewport3D.Children>
                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <!--Установка освещения - прямой свет-->
                        <DirectionalLight Color="White" Direction="-1,-1,-2" />
                    </ModelVisual3D.Content>
                </ModelVisual3D>
                <mycode:Cube3D x:Name="Cube1"
                    Size="1"
                    Position="-0.7,1,1" 
                    Front="#9acd32"                    
                    Bottom="#8a2be2" 
                    Right="#e6e6fa" 
                    Left="#FFAD2929" >
                    <ModelVisual3D.Transform>
                        <Transform3DGroup>
                            <RotateTransform3D>
                                <RotateTransform3D.Rotation>
                                    <AxisAngleRotation3D 
                                 Axis="0,5,0" 
                                 Angle="-30"/>
                                </RotateTransform3D.Rotation>
                            </RotateTransform3D>
                            <RotateTransform3D>
                                <RotateTransform3D.Rotation>
                                    <AxisAngleRotation3D 
                               Axis="1,0,0" 
                               Angle="70"/>
                                </RotateTransform3D.Rotation>
                            </RotateTransform3D>
                            <RotateTransform3D>
                                <RotateTransform3D.Rotation>
                                    <AxisAngleRotation3D 
                                Axis="0,0,1" 
                                Angle="50"/>
                                </RotateTransform3D.Rotation>
                            </RotateTransform3D>
                        </Transform3DGroup>
                    </ModelVisual3D.Transform>
                </mycode:Cube3D>
            </Viewport3D.Children>
        </Viewport3D>
    </Grid>
</Window>
